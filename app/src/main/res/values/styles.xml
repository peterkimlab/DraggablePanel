<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/graytone_6</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_desc_title_black">
        <item name="android:fontFamily">@font/nanumsquareroundb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- menu text -->
    <style name="text_button_black">
        <item name="android:fontFamily">@font/cereal_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">55dp</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:theme">@style/MyButton7</item>
    </style>

    <style name="MyButton7" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorBack</item>
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:minWidth">55dip</item>
    </style>

    <!-- thumbnail -->
    <style name="item_thumbnail">
        <item name="android:layout_width">153dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- time -->
    <style name="text_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanumsquareroundb</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_time</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="text_sentence_en_black">
        <item name="android:layout_width">148dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/nanumbarunpenb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="text_title_en_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:fontFamily">@font/fortescue_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    //Youtube Test
    <style name="image_view">
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
