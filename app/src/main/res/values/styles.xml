<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/graytone_6</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_desc_title_black">
        <item name="android:fontFamily">@font/nanumsquareroundb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- menu text -->
    <style name="text_button_black">
        <item name="android:fontFamily">@font/cereal_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">55dp</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:theme">@style/MyButton7</item>
    </style>

    <style name="MyButton7" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorBack</item>
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:minWidth">55dip</item>
    </style>

    <!-- thumbnail -->
    <style name="item_thumbnail">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">113dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- time -->
    <style name="text_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanumsquareroundb</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_time</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!-- image_play -->
    <style name="image_play">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:background">@drawable/btn_play</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="text_sentence_en_black">
        <item name="android:layout_width">148dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/nanumbarunpenb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="text_title_en_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:fontFamily">@font/fortescue_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    //Youtube Test
    <style name="image_view">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- text sentence text_player_speak -->
    <style name="text_player_speak">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/cereal_bold</item>
    </style>

    <!-- text sentence text_player_en -->
    <style name="text_player_en">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/nanumbarunpenb</item>
    </style>

    <!-- text sentence text_player_ko -->
    <style name="text_player_ko">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/orange5</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/cereal_bold</item>
    </style>

    <!-- text player plat speed -->
    <style name="text_play_speed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- tab text -->
    <style name="text_tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- player imageview -->
    <style name="imageview_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <!-- player TextView time-->
    <style name="textview_player_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- player TextView othervoice-->
    <style name="textview_player_voice">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/textbg</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- button circle  white smaill @font/cereal_black-->
    <style name="btn_circle_white_smaill">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_button_background2</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- button circle white-->
    <style name="btn_circle_white">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/cereal_black</item>
        <item name="android:background">@drawable/round_button_background2</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- imagebutton circle white-->
    <style name="btn_play_circle_white">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/cereal_black</item>
        <item name="android:background">@drawable/round_button_background2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_btn">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/textbg</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- orderNo -->
    <style name="text_orderNo">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- thumbnail -->
    <style name="item_thumbnail_small">
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- cnt -->
    <style name="text_cnt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextStyle_toddaylist2">
        <item name="android:fontFamily">@font/cereal_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- thumbnail -->
    <style name="item_thumbnail_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">69dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="text_sentence_en_black2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/nanumbarunpenb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base_ToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="android:textColor">@color/grey</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>
    </style>

    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/yellow</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CardViewA" parent="CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="TextStyle_toddaylist1">
        <item name="android:fontFamily">@font/cereal_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- progress Bar -->
    <style name="progress_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/gray_youtube_progress_bar</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
