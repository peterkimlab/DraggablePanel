<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape>

            <solid android:color="#50000000" />
            <corners android:radius="10dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3px">

        <shape>
            <solid
                android:color="@color/white" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

            <corners
                android:radius="10dp" />
        </shape>

    </item>


</layer-list>
