<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape>

            <solid android:color="#50000000" />
            <corners android:radius="30dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3px">

        <shape>
            <solid
                android:color="#faff00" />

            <padding
                android:left="5dp"
                android:top="15dp"
                android:right="5dp"
                android:bottom="15dp" />

            <corners
                android:radius="30dp" />
        </shape>

    </item>


</layer-list>
