<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.edxdn.hmsoon.ui.adapter.ProgressBar
        android:id="@+id/songProgress"
        style="@style/progress_bar" />

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="@dimen/youtube_app_bar_height"
        sothree:umanoParallaxOffset="200dp"
        sothree:umanoShadowHeight="4dp">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/id_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlways">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <android.support.design.widget.TabLayout
                            android:id="@+id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@color/white"
                            app:tabBackground="@drawable/tab_selector"
                            app:tabIndicatorColor="@color/white"
                            app:tabSelectedTextColor="@color/orange_app_identity_color"
                            app:tabTextAppearance="@style/text_tab"
                            app:tabTextColor="@color/gray_youtube_tab_bar_text" />
                    </LinearLayout>
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBack"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </android.support.design.widget.CoordinatorLayout>
        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/small_lenear_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/bottom_navigation_view"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/youtube_app_bar_height"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/small_artwork"
                            android:layout_width="27dp"
                            android:layout_height="15dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/youtube_app_bar_padding"
                            android:src="@drawable/icon_open" />
                        <ImageButton
                            android:id="@+id/btnRecord"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/youtube_app_bar_padding"
                            android:background="@drawable/icon_record" />
                        <ImageButton
                            android:id="@+id/small_toggle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/youtube_app_bar_icon_gab"
                            android:layout_toLeftOf="@id/btnRecord"
                            android:background="@drawable/icon_play" />
                        <ImageButton
                            android:id="@+id/small_texta"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/youtube_app_bar_icon_gab"
                            android:layout_toLeftOf="@id/small_toggle"
                            android:background="@drawable/icon_koreng" />
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_youtube_background"
                android:clickable="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/small_artwork_down"
                            android:layout_width="27dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_closemovie" />
                        <ImageView
                            android:id="@+id/repeatOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/border3"
                            android:src="@drawable/ic_action_repeatx1"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/timeFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <com.edxdn.hmsoon.video.TimeLineViewMini
                        android:id="@+id/timeLineView"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@+id/timeVideoView" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/repeat"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_replay_active" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/otherVoicesImg"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:src="@drawable/icon_voice" />
                        <TextView
                            android:id="@+id/otherVoices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/otherVoicesImg"
                            android:layout_alignTop="@+id/otherVoicesImg"
                            android:layout_alignRight="@+id/otherVoicesImg"
                            android:layout_alignBottom="@+id/otherVoicesImg"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/playSpeed"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_x_100" />
                    <ImageView
                        android:id="@+id/shuffle"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_shuffle" />
                    <ImageView
                        android:id="@+id/record"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_record" />
                </LinearLayout>
                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/red" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/text"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/koreng"/>
                        <Button
                            android:id="@+id/texts"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:background="@drawable/icon_announce"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/orange_app_identity_color"
                            android:text="Quick question"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="간단한 질문"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/gray_youtube_announce_text"
                            android:text="퀵퀘스천"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:visibility="gone"
                    android:id="@+id/textt"
                    style="@style/btn_circle_white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="T" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginBottom="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rewind"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/play_back" />
                    <ImageView
                        android:id="@+id/prev"
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/player_prev" />
                    <ImageView
                        android:id="@+id/play_pause_toggle"
                        android:layout_width="29dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:src="@drawable/player_play" />
                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/player_next" />
                    <ImageView
                        android:id="@+id/forward"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/play_forward" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</LinearLayout>