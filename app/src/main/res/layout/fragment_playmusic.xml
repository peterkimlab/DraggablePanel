<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.pierfrancescosoffritti.youtubeplayer.player.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
        <com.edxdn.hmsoon.ui.adapter.ProgressBar
            android:id="@+id/songProgress"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_weight="0"
            android:background="@color/black"
            android:padding="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/your_play_list"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:scrollbars="none" />
                <FrameLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_youtube_music_background"
                    android:clickable="true">
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/textlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_youtube_background"
                    android:clickable="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/small_artwork_down"
                                android:layout_width="27dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_closemovie" />
                            <ImageView
                                android:id="@+id/repeatOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/border3"
                                android:src="@drawable/ic_action_repeatx1"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/repeat"
                            android:layout_width="33dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/icon_replay_active" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/otherVoicesImg"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:src="@drawable/icon_voice" />
                            <TextView
                                android:id="@+id/otherVoices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/otherVoicesImg"
                                android:layout_alignTop="@+id/otherVoicesImg"
                                android:layout_alignRight="@+id/otherVoicesImg"
                                android:layout_alignBottom="@+id/otherVoicesImg"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/playSpeed"
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_weight="1"
                            android:src="@drawable/icon_x_100" />
                        <ImageView
                            android:id="@+id/shuffle"
                            android:layout_width="33dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/icon_shuffle" />
                    </LinearLayout>
                    <!--<View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/red" />-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageButton
                                android:id="@+id/korengBtn"
                                android:layout_width="50dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/koreng"/>
                            <ImageButton
                                android:id="@+id/announceBtn"
                                android:layout_width="50dp"
                                android:layout_height="36dp"
                                android:background="@drawable/icon_announce"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/alltext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/orange_app_identity_color"
                                android:text="Quick question"/>
                            <TextView
                                android:id="@+id/alltextkr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:text="간단한 질문"/>
                            <TextView
                                android:id="@+id/speakko"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/gray_youtube_announce_text"
                                android:text="퀵퀘스천"/>
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/textt"
                        style="@style/btn_circle_white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="T" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:layout_marginBottom="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/rewind"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/play_back" />
                        <ImageView
                            android:id="@+id/prev"
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/player_prev" />
                        <ImageView
                            android:id="@+id/play_pause_toggle"
                            android:layout_width="29dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:src="@drawable/player_play" />
                        <ImageView
                            android:id="@+id/next"
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/player_next" />
                        <ImageView
                            android:id="@+id/forward"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/play_forward" />
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/black">
                    <TextView
                        android:id="@+id/youtube"
                        android:layout_width="126dp"
                        android:layout_height="46dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0"
                        android:background="@drawable/youtube"
                        android:gravity="center"></TextView>
                    <ImageView
                        android:id="@+id/small_video_down"
                        android:layout_width="27dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@drawable/up" />
                    <TextView
                        android:id="@+id/deepdive"
                        android:layout_width="126dp"
                        android:layout_height="46dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0"
                        android:background="@drawable/study"
                        android:gravity="center"></TextView>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>