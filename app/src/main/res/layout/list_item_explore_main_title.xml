<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/explore_main_title_layout_margin_top"
    android:layout_marginBottom="@dimen/explore_main_title_layout_margin_bottom"
    android:orientation="vertical">
    <TextView
        android:id="@+id/itemMainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/explore_main_title_text_view_margin_left"
        android:layout_marginBottom="@dimen/explore_main_title_text_view_margin_bottom"
        android:textSize="30dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:text="MAIN"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/explore_recycler_layout_margin_left">
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnMore"
            android:text="sub Title"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="더보기"
            android:textSize="18sp"
            android:textColor="@color/orange_app_identity_color"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/explore_recycler_layout_margin_left"
        android:orientation="horizontal" />
</LinearLayout>

